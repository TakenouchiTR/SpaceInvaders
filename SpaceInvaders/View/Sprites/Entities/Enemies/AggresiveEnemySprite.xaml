<base:BaseSprite
    x:Class="SpaceInvaders.View.Sprites.AggresiveEnemySprite"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SpaceInvaders.View.Sprites"
    xmlns:base="using:SpaceInvaders.View.Sprites"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="32"
    d:DesignWidth="32"
    Height="32"
    Width="32">

    <UserControl.Resources>
        <SolidColorBrush x:Key="BodyColor" Color="LightGray" />
        <SolidColorBrush x:Key="BorderColor" Color="Black" />
    </UserControl.Resources>

    <Canvas>
        <Polygon Points="8,0 0,8 0,22 5,32 8,32 10,28 10,20 13,17 18,17 21,20 21,28 23,32 26,32 32,22 32,8 23,0"
                 Fill="{StaticResource BodyColor}" Stroke="{StaticResource BorderColor}" />
        <Polygon Points="14,25 15,26 16,26 17,25 17,17 14,17"
                 Fill="{StaticResource BodyColor}" Stroke="{StaticResource BorderColor}" />
    </Canvas>
</base:BaseSprite>