<base:BaseSprite
    x:Class="SpaceInvaders.View.Sprites.Entities.Enemies.BasicEnemySpriteBase"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SpaceInvaders.View.Sprites.Entities.Enemies"
    xmlns:base="using:SpaceInvaders.View.Sprites"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="32"
    d:DesignWidth="27"
    Height="32"
    Width="27">

    <UserControl.Resources>
        <SolidColorBrush x:Key="BorderColor" Color="Black" />
    </UserControl.Resources>

    <Canvas>
        <Polygon Fill="LightGray" Stroke="{StaticResource BorderColor}" 
                 Points="14,4 11,0 0,0 6,10 6,23 8,29 10,31 14,32 18,31 20,29 22,23 22,10 27,0 17,0"/>
        <Polygon Fill="Aqua" Stroke="{StaticResource BorderColor}"
                 Points="10,21 10,23 11,26.5 12,28.25 13,29 14,29.5 15,29 16,28.25 17,26.5 18,23 18,21"/>
    </Canvas>
</base:BaseSprite>