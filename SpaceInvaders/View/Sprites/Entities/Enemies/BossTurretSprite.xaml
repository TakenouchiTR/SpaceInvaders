<base:BaseSprite
    x:Class="SpaceInvaders.View.Sprites.Entities.Enemies.BossTurretSprite"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:base="using:SpaceInvaders.View.Sprites"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="16"
    d:DesignWidth="24"
    Height="16"
    Width="24">

    <UserControl.Resources>
        <SolidColorBrush x:Key="BorderColor" Color="Black" />
        <SolidColorBrush x:Key="FillColor" Color="#aaa" />
    </UserControl.Resources>

    <Canvas>
        <Rectangle Width="10" Height="6" Fill="{StaticResource FillColor}" Canvas.Left="6" Canvas.Top="-3"
                   Stroke="{StaticResource BorderColor}" />
        <Ellipse Width="16" Height="16" Stroke="{StaticResource BorderColor}" Fill="{StaticResource FillColor}"
                 Canvas.Left="-8" Canvas.Top="-8" />
    </Canvas>
</base:BaseSprite>