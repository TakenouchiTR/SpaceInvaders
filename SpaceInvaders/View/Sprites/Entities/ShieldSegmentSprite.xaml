<base:BaseSprite
    x:Class="SpaceInvaders.View.Sprites.Entities.ShieldSegmentSprite"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:base="using:SpaceInvaders.View.Sprites"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="16"
    d:DesignWidth="14"
    Width="16"
    Height="16">

    <UserControl.Resources>
        <SolidColorBrush x:Key="BaseColor" Color="DarkOrange" />
        <SolidColorBrush x:Key="OuterColor" Color="Cyan" />
    </UserControl.Resources>

    <Canvas>
        <Polygon Fill="{StaticResource OuterColor}" Points="0,4 7,0 7,16 0,12"/>
        <Polygon Fill="{StaticResource OuterColor}" Points="0,4 -7,0 -7,16 0,12" Canvas.Left="14"/>
        <Polygon Fill="{StaticResource BaseColor}" Points="0,3 5,0 5,12 0,9" Canvas.Top="2" Canvas.Left="2"/>
        <Polygon Fill="{StaticResource BaseColor}" Points="0,3 -5,0 -5,12 0,9" Canvas.Top="2" Canvas.Left="12"/>

    </Canvas>
</base:BaseSprite>