<base:BaseSprite
    x:Class="SpaceInvaders.View.Sprites.Entities.NukeWaveSprite"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:base="using:SpaceInvaders.View.Sprites"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="64"
    d:DesignWidth="64"
    Height="64"
    Width="64">

    <Canvas>
        <Polygon Points="64,0 64,64 12,64 0,54 0,12 12,0" FocusVisualPrimaryBrush="White" Canvas.Left="-32"
                 Canvas.Top="-32">
            <Polygon.Fill>
                <LinearGradientBrush EndPoint="0,.5" StartPoint="1,.5">
                    <GradientStop Color="#00FF5100" Offset="0" />
                    <GradientStop Color="#FFFFDC00" Offset="1" />
                </LinearGradientBrush>
            </Polygon.Fill>
        </Polygon>
    </Canvas>
</base:BaseSprite>